@model Rkna_Project.Models.Customer_Slut_Table

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h3>Are you sure you want to delete this Booking Slut?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>  
            @Html.DisplayName("Slut Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cus_Slut_Date)
        </dd>

        <dt>
            @Html.DisplayName("Slut Start Time")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cus_Slut_S_Time)
        </dd>

        <dt>
            @Html.DisplayName("Slut End Time")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cus_Slut_E_Time)
        </dd>

        <dt>
            @Html.DisplayName("Cheeck Code")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cheeck_Code)
        </dd>

        <dt>
            @Html.DisplayName("User Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>

        

        <dt>
            @Html.DisplayName("Slut Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slut_Table.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
