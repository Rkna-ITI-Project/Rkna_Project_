@model IEnumerable<Rkna_Project.Models.Slut_Table>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table  w-auto small">
    <tr>
        <th>
            @Html.DisplayName("Slut Name")
        </th>
        <th>
            @Html.DisplayName("Slut Levels")
        </th>
        <th>
            @Html.DisplayName("Slut State")
        </th>
        <th>
            @Html.DisplayName("Area Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slut_Level)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slut_State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area_Table.Area_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Slut_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Slut_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Slut_ID })
        </td>
    </tr>
}

</table>
