@model IEnumerable<Rkna_Project.Models.States_Table>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index Of All States</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("State Name")
        </th>
        <th>
            @Html.Label("State Description ")
        </th>
        <th>
            @Html.Label("Governorate Name")
        </th>
        <th></th>
    </tr> 
     
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.States_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.States_Desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Governorate_Table.Gov_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.States_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.States_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.States_ID })
        </td>
    </tr>
}

</table>
