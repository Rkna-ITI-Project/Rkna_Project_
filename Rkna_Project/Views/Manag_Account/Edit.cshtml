
@model Rkna_Project.Models.AspNetUserRole

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>State</h4> 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AspNetUser.UserName)

        <div class="form-group">
            @Html.Label("Rule", htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                <select class="form-control" id="RoleId" name="RoleId" required="required">
                    @if (Model.RoleId == "admin")
                    {
                        <option selected value="admin">admin</option>
                    }
                    else
                    {
                        <option value="admin">admin</option>
                    }
                    @if (Model.RoleId == "manager")
                    {
                        <option selected value="manager">manager</option>
                    }
                    else
                    {
                        <option value="manager">manager</option>
                    }

                    @if (Model.RoleId == "user")
                    {
                        <option selected value="user">user</option>
                    }
                    else
                    {
                        <option value="user">user</option>
                    }
                </select>

                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AspNetUser.UserName, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AspNetUser.UserName, "User Name", new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.AspNetUser.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "State Description", htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AspNetUser.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AspNetUser.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div id="map_canvas" style="height: 400px;"></div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
